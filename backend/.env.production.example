# ==================== Production Environment ====================
# คัดลอกไฟล์นี้เป็น .env.production และใส่ค่าจริง

# Database (PostgreSQL บน server)
DATABASE_URL="postgresql://csse4169:YOUR_DB_PASSWORD@localhost:5432/painamnae?schema=public"

# JWT Secret (สร้างค่าใหม่ที่ปลอดภัย)
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_64_CHARS

# Cloudinary (ใช้ค่าเดิมจาก development)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Admin Account (จะสร้างอัตโนมัติถ้ายังไม่มี)
ADMIN_EMAIL=admin@painamnae.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Server Settings
NODE_ENV=production
PORT=3000
